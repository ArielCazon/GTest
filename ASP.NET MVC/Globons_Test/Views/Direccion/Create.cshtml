@model Globons_Test.Models.DireccionViewModel

@{
    ViewBag.Title = "Crear Direccion";
    Layout = "~/Views/Shared/_LayoutGlobons.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Crear Direccion</legend>

        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Calle)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Calle)
                @Html.ValidationMessageFor(model => model.Calle)
            </div>
        </div>

        <div class="form-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.Numero)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Numero, new { @class = "numericOnly" })
            @Html.ValidationMessageFor(model => model.Numero)
        </div>
        </div>

        <p>
            @Html.ActionLink("Volver al listado", "Index", null, new { @class="btn btn-primary" })
            <input type="submit" value="Crear"  class="btn btn-success"/>
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
