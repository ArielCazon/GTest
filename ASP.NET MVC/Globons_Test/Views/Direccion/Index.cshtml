@model IEnumerable<Globons_Test.Models.DireccionViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGlobons.cshtml";
}

<h2>Direcciones</h2>

<p>
    @Html.ActionLink("Crear Direccion", "Create", null, new { @class="btn btn-primary btn-xs" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDireccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDireccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdDireccion }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdDireccion })
            </td>
        </tr>
    }

</table>
